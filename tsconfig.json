{
    "compilerOptions": {
        "outDir": "./static/js/build",
        "target": "es6",
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": false,
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "handlebars",
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "baseUrl": "./",
        "paths": {
            "Utils/*": [
                "./src/utils/*"
            ],
            "Common/*": [
                "./src/*"
            ],
            "Components/*": [
                "./src/Components/*"
            ],
            "Pages/*": [
                "./src/pages/*"
            ],
            "Api/*": [
                "./src/api/*"
            ],
            "Store/*": [
                "./src/store/*"
            ],
            "Controllers/*": [
                "./src/controllers/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
