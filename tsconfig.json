{
    "compilerOptions": {
        "outDir": "./static/js/build",
        "target": "es6",
        "declaration": false,
        "module": "ES6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "strict": true,
        "types": [
            "handlebars",
            "mocha",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "src/**/*",
        "tests"
    ],
}