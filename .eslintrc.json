{
    "env": {
        "browser": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "airbnb-typescript"
    ],
    "rules": {
        "@typescript-eslint/quotes": [
            "error",
            "double"
        ],
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "@typescript-eslint/comma-dangle": [
            "error",
            "never"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "react/static-property-placement": [
            "off"
        ],
        "max-len": [
            "warn",
            300
        ],
        "no-continue": [
            "off"
        ],
        "no-restricted-syntax": [
            "off"
        ],
        "no-useless-escape": [
            "off"
        ],
        "class-methods-use-this": [
            "off"
        ]
    }
}