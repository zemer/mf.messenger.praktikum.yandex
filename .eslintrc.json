{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "extends": [
        "airbnb-typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:jest/recommended"
    ],
    "rules": {
        "@typescript-eslint/quotes": [
            "error",
            "double"
        ],
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "@typescript-eslint/comma-dangle": [
            "error",
            "never"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ]
    }
}